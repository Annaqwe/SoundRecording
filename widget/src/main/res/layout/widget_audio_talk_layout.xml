<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:gravity="center"
    android:paddingTop="20dp"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:paddingBottom="20dp"
    android:background="@drawable/form_widget_audio_trans_round_bg"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:text="正在录音" />
    
    <ImageButton
        android:id="@+id/talk_log"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/form_widget_audio_record_animate_01"
        android:background="#00000000"
        />

    <TextView
            android:id="@+id/talk_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:layout_marginTop="10dp"
            android:text="1S" />
   <Button
            android:id="@+id/talk_stop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:layout_marginTop="10dp"
            android:textSize="14sp"
            android:background="#00000000"
            android:text="点击其他位置\n 停止录音"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
         />
</LinearLayout>
